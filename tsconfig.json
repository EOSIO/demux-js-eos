{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
     "declaration": true,
    "outDir": "dist",

    "strict": true,
    "noImplicitAny": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "moduleResolution": "node",
    "esModuleInterop": true
  }
}
